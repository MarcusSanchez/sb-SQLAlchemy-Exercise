{% extends 'base.jinja2' %}

{% block title %}Users{% endblock %}

{% block content %}
  <h1>Users</h1>

  {% if users %}
    <ul>
      {% for user in users %}
        <li><a href="/users/{{ user.id }}">
          {{ user.first_name }} {{ user.last_name }}
        </a></li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No users found.</p>
  {% endif %}

  <hr>
  <button class="btn btn-outline-primary">
    <a href="/users/new" class="text-decoration-none">Create New User</a>
  </button>
{% endblock %}


