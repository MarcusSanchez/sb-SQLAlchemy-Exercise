{% extends 'base.jinja2' %}

{% block title %}Edit {{ user.first_name }} {{ user.last_name }}{% endblock %}}

{% block content %}
  <h1>Edit a user</h1>


  <form method="POST">
    <label class="d-flex gap-2 mb-3">
      First Name
      <input type="text" name="first_name" placeholder="first name" value="{{ user.first_name }}">
    </label>

    <label class="d-flex gap-2 mb-3">
      Last Name
      <input type="text" name="last_name" placeholder="last name" value="{{ user.last_name }}">
    </label>

    <label class="d-flex gap-2 mb-3">
      Image URL
      <input type="text" name="image_url" placeholder="profile picture (optional)" value="{{ user.image_url }}">
    </label>

    <button formaction="/users" formmethod="get" class="btn btn-outline-primary">
      Cancel
    </button>
    <button type="submit" class="btn btn-outline-dark">Save</button>
  </form>
{% endblock %}