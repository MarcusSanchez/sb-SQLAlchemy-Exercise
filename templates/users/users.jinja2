{% extends 'base.jinja2' %}

{% block title %}Users{% endblock %}

{% block content %}
  <h1>Users</h1>

  {% if users %}
    <ul>
      {% for user in users %}
        <li><a href="/users/{{ user.id }}">
          {{ user.first_name }} {{ user.last_name }}
        </a></li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No users found.</p>
  {% endif %}

  <hr>
  <form>
    <button formaction="/users/new" formmethod="get" class="btn btn-outline-primary">
      Create New User
    </button>
  </form>
{% endblock %}


